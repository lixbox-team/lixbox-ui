<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibrary_2_2.xsd">
 <description>Cette librairie contient tous les widgets gérés par la lixbox</description>
 <namespace>http://www.lixbox.fr/widget</namespace>

 <short-name>lixbox-ui-widget</short-name>
 <tag>
  <description>widget de recherche</description>
  <tag-name>search</tag-name>
  <component>
   <component-type>lixbox.component.widget.SearchComponent</component-type>
   <handler-class>fr.lixbox.ui.faces.handler.component.widget.SearchHandler</handler-class>
  </component>
  <attribute>
   <name>globalStyle</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>styleClass</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>label</name>
   <required>true</required>
   <type>String</type>
  </attribute>
  <attribute>
   <name>placeholder</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>autocompleteListener</name>
   <type>javax.el.MethodExpression</type>
  </attribute>
  <attribute>
   <name>query</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>immediate</name>
   <type>Boolean</type>
  </attribute>
  <attribute>
   <name>actionExpression</name>
   <required>true</required>
   <type>javax.el.MethodExpression</type>
  </attribute>
 </tag>
 <tag>
  <tag-name>alert</tag-name>
  <component>
   <component-type>lixbox.component.widget.AlertComponent</component-type>
   <handler-class/>
  </component>
  <attribute>
   <name>globalStyle</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>styleClass</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>level</name>
   <required>true</required>
   <type>String</type>
  </attribute>
  <attribute>
   <name>dismissible</name>
   <type>Boolean</type>
  </attribute>
  <attribute>
   <name>hardAlert</name>
   <type>Boolean</type>
  </attribute>
 </tag>
 <tag>
  <tag-name>grow</tag-name>
  <component>
   <component-type>lixbox.component.widget.GrowComponent</component-type>
   <handler-class/>
  </component>
  <attribute>
   <name>globalStyle</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>styleClass</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>level</name>
   <required>true</required>
   <type>String</type>
  </attribute>
  <attribute>
   <name>title</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>description</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>position</name>
   <required>true</required>
   <type>String</type>
  </attribute>
  <attribute>
   <name>refer_id</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>refer_event</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>global_only</name>
   <type>boolean</type>
  </attribute>
 </tag>
 <tag>
  <tag-name>dropdown</tag-name>
  <component>
   <component-type>lixbox.component.widget.dropdown.DropDownComponent</component-type>
   <handler-class/>
  </component>
  <attribute>
   <name>globalStyle</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>styleClass</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>title</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>position</name>
   <required>true</required>
   <type>String</type>
  </attribute>
  <attribute>
   <name>view_arrow</name>
   <type>boolean</type>
  </attribute>
  <attribute>
   <name>icons</name>
   <type>String</type>
  </attribute>
 </tag>
 <tag>
  <tag-name>dropdown-item</tag-name>
  <component>
   <component-type>lixbox.component.widget.dropdown.DropDownItemComponent</component-type>
   <handler-class/>
  </component>
  <attribute>
   <name>globalStyle</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>styleClass</name>
   <type>String</type>
  </attribute>
  <attribute>
   <name>title</name>
   <type>String</type>
  </attribute>
 </tag>
</facelet-taglib>
